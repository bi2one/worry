.article {
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
    font-size: 0.75em;
}

/* commentform start */
#comment-form {
    margin-top:18px;
}

#comment-form #comment-textarea {
    background: url(../images/background_color.jpg);
    border:1px solid #D0D0D0;
    width: 660px;
    height: 80px;
    padding: 5px;
    font-size: 12px;
}

#comment-form #guest-button-area {
    margin:10px;
}

#comment-form .confirm-btn {
    margin-left: 7px;
}
/* commentform end */
/* guest start */
#guest-wrap {
    width: 703px;
    margin: auto;
    padding: 20px;
    border: 1px solid black;
}

#guest-wrap ul {
    list-style:none;
    list-style-position: inside;
    padding:0;
    border: 1px solid black;b
    margin: auto;
}

.doc-date {
    margin-top:10px;
}

#guest-wrap li.doc-element-block {
    margin:10px;
    padding: 10px;
    background-color:#e3e3e3;
    width: 660px;

    opacity: 0.60;
    filter:alpha(opacity=60);
}

#guest-wrap .doc-username {
    width: 120px;
    float:left;
    margin: 0 0 0 10px;
    margin-bottom:10px;
}

#guest-wrap .guest-content {
    width: 470px;
    margin: 0;
    margin-left:10px;
}

#guest-wrap .doc-content {
    overflow: hidden;
}

#guest-wrap .doc-element {
    width: 650px;
}
/* guest end */
/* guest_comment start */
.cmt-element-area .cmt-element-block {
    background-color: #eeeeee;
    color: #000000;
    /* opacity: 0.60; */
    /* border: solid #909090; */
    /* border-width: 1px 0 0 0; */
    margin-top: 4px;
}

.cmt-element-area .arrow {
    background: url(../images/indentArrow.png) no-repeat;
    background-position: 10px 5px;
    width: 7%;
    height: 20px;
}

.cmt-element-area .cmt-element {
    overflow: hidden;
}

.cmt-element-area .cmt-content {
    margin: 2px 0 2px 0 ;
}
/* guest_comment end */
/* pagination start */
.guest_pagination {
    font-size:0.8em;
    color:gray;
    text-align:center;
    margin:auto;
}
/* pagination end */
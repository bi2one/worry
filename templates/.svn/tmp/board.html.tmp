{% extends "layout.html" %}

{% block title %}WORRY BOARD{% endblock %}

{% block link %}
<link rel="stylesheet" type="text/css"
      href="/site_media/css/board.css" />
<link rel="stylesheet" tyep="text/css"
      href="/site_media/css/search_area.css" />
<script src="/site_media/js/search_area.js" type="text/javascript"></script>
{% endblock %}

{% block side_menu %}
{% ifnotequal module_name "shop" %}
<div id="side-menu-wrap">
  <ul>
    <li><a href="/worryboard/?category=1">- Worry Board</a></li>
    <li><a href="/notice/?category=3">- Notice</a></li>
    <li><a href="/faq/?category=4">- FAQ<a></li>
  </ul>
</div>
{% endifnotequal %}
{% endblock %}

{% load document_filter %}
{% block content %}
<div id="board-wrap">
  <div id="login-join">
    {% if not user.is_authenticated %}
    <a href="/accounts/login/"><img src="/site_media/images/bttn_login.png" alt="login" /></a>
    <a href="/accounts/join/"><img src="/site_media/images/bttn_join.png" alt="join" /></a>
    {% else %}
    <a href="/accounts/logout/"><img src="/site_media/images/logout_btn.png" alt="logout" /></a>
    {% endif %}
    {% if doc %}
    {% if user.is_superuser %}
    <a class="float_right" href="/{{module_name}}/delete/{{doc.id}}/"><img src="/site_media/images/delete_btn.png" alt="delete" /></a>
    <a class="float_right" href="/{{module_name}}/modify/{{doc.id}}/"><img src="/site_media/images/modify_btn.png" alt="modify" /></a>
    {% else %}
    {% ifequal doc.user.id user.id  %}
    <a class="float_right" href="/{{module_name}}/delete/{{doc.id}}/"><img src="/site_media/images/delete_btn.png" alt="delete" /></a>
    <a class="float_right" href="/{{module_name}}/modify/{{doc.id}}/"><img src="/site_media/images/modify_btn.png" alt="modify" /></a>
    {% endifequal %}
    {% endif %}
    {% endif %}
  </div>
  {% if doc %}
  {% if doc|has_view_auth_on_doc:user %}
  <div class="clear_right"></div>
  <div id="worryboard_view">
    <div class="view_title_bar background" style="font-size:0.8em;">
      <span class="view_title">{{ doc.title }}</span>
      <div class="float_right small">
	{{ doc.pub_date.date }}&nbsp;
	{% if doc.user.nick_name %}
	{{ doc.user.nick_name }}
	{% else %}
	{{ doc.user.username }}
	{% endif %}
      </div>
      <div class="clear_right"></div>
    </div>
    <div class="view_content background">
      {% autoescape off %}
      {{ doc.content }}
      {% endautoescape %}
      {% include "comment.html" %}
    </div>
    <div style="margin:50px;"></div>
  </div>
  {% else %}
  <script type="text/javascript">
    alert("비밀글 입니다.")
    history.back(-1);
  </script>
  {% endif %}
  {% endif %}
  {% include "board_list.html" %}
</div>
{% endblock %}

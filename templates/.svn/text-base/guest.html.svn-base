{% extends "layout.html" %}

{% block title %}GUEST{% endblock %}

{% block link %}
<link rel="stylesheet" type="text/css" href="/site_media/css/guest.css" />
<!--[if IE]><link rel="stylesheet" type="text/css" href="/site_media/css/guest_ie.css" /><![endif]--> 
<!--[if IE 6]><link rel="stylesheet" type="text/css" href="/site_media/css/guest_ie6.css" /><![endif]--> 
{% endblock %}
{% load document_filter %}
{% block content %}
<div id="guest-wrap">
  <div id="login-join">
    {% if not user.is_authenticated %}
    <a href="/accounts/login/"><img class="png_bg" src="/site_media/images/small_login_btn.png" alt="login" /></a>
    <a href="/accounts/join/" style="margin-left:5px;"><img class="png_bg" src="/site_media/images/small_join_btn.png" alt="join" /></a>
    {% else %}
    <a href="/accounts/logout/"><img src="/site_media/images/small_logout_btn.png" alt="logout" /></a>
    {% endif %}
  </div>

  <div class="article">
    {% include "guest_doc_write_form.html" %}
    {% for doc in docs %}
    <div class="doc-element-block" style="margin-bottom:15px;border-bottom:1px solid #cdcdcd">
      {% include "guest_doc_element.html" %}
      {% include "guest_comment.html" %}
    </div>
    {% endfor %}
  </div>

  <div class="guest_pagination">
    {% if prev_page %}
    <a class="prev-btn" href="/guest/{{prev_page}}/{{option_string}}" ><img src="/site_media/images/prev_btn.png" alt="previous" /></a>&nbsp;
    {% endif %}
    
    {% for page in pages %}
    {% ifequal page page_number %}
    <a href="/guest/{{page}}/{{option_string}}" style="font-weight:bold"><span class="page-number">{{page}}</span></a>
    {% else %}
    <a href="/guest/{{page}}/{{option_string}}" ><span class="page-number">{{page}}</span></a>
    {% endifequal %}

    {% endfor %}
    
    {% if next_page %}
    &nbsp;<a class="next-btn" href="/guest/{{next_page}}/{{option_string}}" ><img src="/site_media/images/next_btn.png" alt="next" /></a>
    {% endif %}
  </div>
</div>
{% endblock %}
